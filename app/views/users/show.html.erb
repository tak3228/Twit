<h4 class="text-center"><%= @user.name %></h4>

<ul class="list-group">
  <li class="list-group-item">自己紹介：<%= @user.bio %></li>
</ul>
<ul class="list-group">
  <li class="list-group-item">アカウント作成日：<%= l @user.created_at, format: :short %></li>
</ul>

<% if current_user.id == @user.id %>
  <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-outline-info" %>
<% else %>
  <div id='follow-button-<%= @user.id %>'>
    <% if current_user.following?(@user) %>
      <%= render 'relationships/unfollow_button', user: @user %>
    <% else %>
      <%= render 'relationships/follow_button', user: @user %>
    <% end %>
  </div>
<% end %>

<%= link_to "ユーザ一覧", users_path, class: "btn btn-outline-info" %>
<%= link_to "戻る", :back, class: "btn btn-outline-secondary" %>
